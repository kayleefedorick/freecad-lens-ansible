# =========================
# WebSocket Upgrade Mapping
# =========================
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

# =========================
# HTTP - HTTPS Redirect
# =========================
server {
    listen 80;
    server_name {{ vault_lensapi_domain }};
    return 301 https://$host$request_uri;
}

# =========================
# HTTPS Reverse Proxy
# =========================
server {
    listen 443 ssl http2;
    server_name {{ vault_lensapi_domain }};

    ssl_certificate     /etc/nginx/certs/lensapi/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/lensapi/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;

    # ==================================================
    # FOR FREECAD LENS UPLOADS
    # ==================================================
    client_max_body_size 5G;
    client_body_buffer_size 512k;
    client_body_timeout 600s;

    # MUST be at server level
    proxy_request_buffering off;
    proxy_buffering off;

    # ==================================================
    # MAIN FRONTEND + API
    # ==================================================
    location / {

        proxy_pass http://{{ lens_hostname }}:{{ lens_backend_port }};

        proxy_http_version 1.1;

        # ---------- headers ----------
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-Port 443;

        # ---------- websocket ----------
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # ---------- streaming ----------
        proxy_request_buffering off;
        proxy_buffering off;
        proxy_max_temp_file_size 0;

        # ---------- large CAD transfers ----------
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
        proxy_connect_timeout 600s;
    }
}